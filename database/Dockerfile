FROM mysql:latest

ARG DATABASE_PASSWORD
ARG DATABASE_USER
ARG DATABASE_NAME

ENV MYSQL_DATABASE=$DATABASE_NAME
ENV MYSQL_USER=$DATABASE_USER
ENV MYSQL_PASSWORD=$DATABASE_PASSWORD
ENV MYSQL_ALLOW_EMPTY_PASSWORD=true

COPY init.sql /docker-entrypoint-initdb.d/

COPY init.sql /docker-entrypoint-initdb.d/

EXPOSE 3306